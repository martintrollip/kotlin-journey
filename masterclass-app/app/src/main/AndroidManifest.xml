<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.masterclass.kotlinmasterclassapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".whatsapp.WhatsappRegisterActivity">
        </activity>
        <activity android:name=".whatsapp.WhatsappLoginActivity">
        </activity>
        <activity android:name=".whatsapp.WhatsappMainActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.PersonActivity">
        </activity>
        <activity android:name=".ui.VolleyActivity">
        </activity>
        <activity android:name=".ui.RecipeActivity">
        </activity>
        <activity android:name=".ui.FirebaseActivity">
        </activity>
    </application>

</manifest>